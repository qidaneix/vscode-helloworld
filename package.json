{
	"name": "helloworld",
	"displayName": "HelloWorld",
	"publisher": "xiaodabao",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.35.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:markdown",
		"workspaceContains:**/*.md",
		"onCommand:extension.insertTable",
		"onCommand:extension.insertLink",
		"onCommand:extension.insertImage",
		"onCommand:extension.markdownToRawHtml",
		"onCommand:extension.markdownToZip"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.insertTable",
				"title": "insert table",
				"category": "Markdown"
			},
			{
				"command": "extension.insertLink",
				"title": "insert link",
				"category": "Markdown"
			},
			{
				"command": "extension.insertImage",
				"title": "insert image",
				"category": "Markdown"
			},
			{
				"command": "extension.markdownToRawHtml",
				"title": "create raw HTML",
				"category": "Markdown"
			},
			{
				"command": "extension.markdownToZip",
				"title": "create raw HTML and zip",
				"category": "Markdown"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "extension.insertTable"
				},
				{
					"command": "extension.insertLink"
				},
				{
					"command": "extension.insertImage"
				},
				{
					"command": "extension.markdownToRawHtml"
				},
				{
					"command": "extension.markdownToZip"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/jszip": "^3.1.6",
		"@types/marked": "^0.6.5",
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28"
	},
	"dependencies": {
		"jszip": "^3.2.2",
		"marked": "^0.7.0"
	}
}
